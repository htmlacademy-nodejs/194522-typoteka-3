extends layout.pug

block vars
  - var wrapperClassNames='wrapper-color'
  - var isAdmin=true

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(method="get" action="/search")
            label
              input(type="text" placeholder="Что ищем?" name="query")
            button.search__button.button.button--transparent(type="submit") Найти
          if isAfterSearch
            if searchResults
              each article in searchResults
                .search__result
                  time.search__date(datetime='2019-03-21T20:33') #{article.createdDate}
                  a.search__link #{article.title}
            else
              p.search-page__empty Ничего не нашлось
